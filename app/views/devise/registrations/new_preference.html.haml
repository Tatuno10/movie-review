%h2住所情報登録

= form_with model:@preference, local: true  do |f| 
  .field
    = f.label :好きなカテゴリー１
    = f.collection_select :category1_id, Tag.all, :id, :name
  .field
    = f.label :好きなカテゴリー２
    = f.collection_select :category2_id, Tag.all, :id, :name
  .field
    = f.label :好きなジャンル１
    = f.collection_select :genre1_id, Genre.all, :id, :name
  .field
    = f.label :好きなジャンル2
    = f.collection_select :genre2_id, Genre.all, :id, :name
  .actions
    = f.submit "Sign up" 