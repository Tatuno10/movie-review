%body.create-account 
  %h2 Movie-Review
  .regist-form
    = form_with model:@user, url: session_path(@user), local: true  do |f| 
      %h1 ログインする
      .form-box
        .form-box__form-title
          = f.label :email 
        .form-box__input-box
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
      .form-box
        .form-box__form-title
          = f.label :password 
        .form-box__input-box
          = f.password_field :password, autocomplete: "current-password", placeholder: "8文字以上のパスワード"
        - if devise_mapping.rememberable? 
          .field
            = f.check_box :remember_me 
            = f.label :remember_me  
      .regist-form__form-submit
        = f.submit "ログイン" 

