.header
  = render "header"
.wrapper
  = render "side-bar"
  .search
    .search-result
      検索対象
      = @search
      = @movies.length 
      件の検索結果
    .search-list
      - @movies.each do |movie|
        .Movie-box
          = link_to movie_path(movie.id),method: :get, class: "Movie-box__title" do
            .Movie-box__title
              = movie.title
            .Movie-box__photo
              = image_tag movie.image.url, alt: "test", width: "100", height: "200"