.main
  %h1.movie-choice
    おすすめの映画
    .movie-choice__list
      - @movies.first(10).each do |movie|
        .movie-box
          = link_to movie_path(movie.id),method: :get, class: "movie-box__title" do
            .movie-box__title
              = movie.title
            .movie-box__photo
              = image_tag movie.image.url, alt: "test", width: "100", height: "200"
